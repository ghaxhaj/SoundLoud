<h1>User Login</h1>


<% if flash[:errors] %>
<%= flash[:errors] %>
    <% end %>


<%= form_tag({:controller => "session", :action => "user_create"}, method: :post) do %>
    <%= label_tag "username" %>
    <%= text_field_tag "username"%>
    <%= label_tag "password" %>
    <%= text_field_tag "password" %>
    <%= submit_tag "Login" %>
    <% end %>



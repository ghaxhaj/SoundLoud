<h1>Create New Artist Account</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
  <%= error %>
  <% end %>
  <% end %>

<%= form_for @artist do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :bio %>
  <%= f.text_area :bio %><br>

  <%= f.label :location %>
  <%= f.text_field :location %><br>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %><br>

  <%= f.label :genre %>
  <%= f.text_field :genre %><br>

  <%= f.label :awards %>
  <%= f.text_field :awards %><br>

  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.text_field :password %><br>

  <%= f.submit %>
<% end %>
